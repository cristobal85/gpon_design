{% extends 'dashboard/index.html.twig' %}

{% block title %}OLT{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">OLT</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Rack</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for olt in olts %}
                            <tr>
                                <td>{{ olt.name }}</td>
                                <td>{{ olt.rack }}</td>
                                <td>
                                    <a href="{{ path('olt_show', {'id': olt.id}) }}" class="btn btn-primary btn-circle">
                                        <i class="fas fa-search-plus"></i>
                                    </a>
                                    <a href="{{ path('olt_edit', {'id': olt.id}) }}" class="btn btn-secondary btn-circle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('olt/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">No se encontraron registros</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('olt_new') }}" class="btn btn-primary">Nueva OLT</a>
{% endblock %}
