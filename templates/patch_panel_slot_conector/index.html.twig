{% extends 'dashboard/index.html.twig' %}

{% block title %}Conector{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Conector</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>NÃºmero</th>
                            <th>Slot</th>
                            <th>Nombre completo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for patch_panel_slot_conector in patch_panel_slot_conectors %}
                            <tr>
                                <td>{{ patch_panel_slot_conector.number }}</td>
                                <td>{{ patch_panel_slot_conector.patchPanelSlot }}</td>
                                <td>{{ patch_panel_slot_conector }}</td>
                                <td>
                                    <a href="{{ path('patch_panel_slot_conector_show', {'id': patch_panel_slot_conector.id}) }}" class="btn btn-primary btn-circle">
                                        <i class="fas fa-search-plus"></i>
                                    </a>
                                    <a href="{{ path('patch_panel_slot_conector_edit', {'id': patch_panel_slot_conector.id}) }}" class="btn btn-secondary btn-circle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('patch_panel_slot_conector/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">No se encontraron registros</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('patch_panel_slot_conector_new') }}" class="btn btn-primary">Nuevo Conector</a>
{% endblock %}
