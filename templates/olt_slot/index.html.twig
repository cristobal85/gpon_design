{% extends 'dashboard/index.html.twig' %}

{% block title %}Tarjeta{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tarjeta</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>NÃºmero</th>
                            <th>OLT</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for olt_slot in olt_slots %}
                            <tr>
                                <td>{{ olt_slot.number }}</td>
                                <td>{{ olt_slot.olt }}</td>
                                <td>
                                    <a href="{{ path('olt_slot_show', {'id': olt_slot.id}) }}" class="btn btn-primary btn-circle">
                                        <i class="fas fa-search-plus"></i>
                                    </a>
                                    <a href="{{ path('olt_slot_edit', {'id': olt_slot.id}) }}" class="btn btn-secondary btn-circle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('olt_slot/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">No se encontraron registros</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('olt_slot_new') }}" class="btn btn-primary">Nueva Tarjeta</a>
{% endblock %}
