{% extends 'dashboard/index.html.twig' %}

{% block title %}Slot{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Slot</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>NÃºmero</th>
                            <th>Patch panel</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for patch_panel_slot in patch_panel_slots %}
                            <tr>
                                <td>{{ patch_panel_slot.number }}</td>
                                <td>{{ patch_panel_slot.patchPanel }}</td>
                                <td>
                                    <a href="{{ path('patch_panel_slot_show', {'id': patch_panel_slot.id}) }}" class="btn btn-primary btn-circle">
                                        <i class="fas fa-search-plus"></i>
                                    </a>
                                    <a href="{{ path('patch_panel_slot_edit', {'id': patch_panel_slot.id}) }}" class="btn btn-secondary btn-circle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('patch_panel_slot/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">No se encontraron registros</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('patch_panel_slot_new') }}" class="btn btn-primary">Nuevo Slot</a>
{% endblock %}
