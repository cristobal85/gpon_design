<form method="post" action="{{ path('wire_pattern_delete', {'id': wire_pattern.id}) }}" onsubmit="return confirm('¿Estás seguro?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wire_pattern.id) }}">
    <button class="btn btn-danger btn-circle">
        <i class="fas fa-trash"></i>
    </button>
</form>
