{% extends 'dashboard/index.html.twig' %}

{% block title %}Mapas{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Mapas</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mapa</th>
                            <th>Nombre a mostrar</th>
                            <th>URL</th>
                            <th>Zoom mínimo</th>
                            <th>Zoom máximo</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for map in maps %}
                            <tr>
                                <td>{{ map.name }}</td>
                                <td>{{ map.displayName }}</td>
                                <td>{{ map.url }}</td>
                                <td>{{ map.minZoom }}</td>
                                <td>{{ map.maxZoom }}</td>
                                <td>
                                    <a href="{{ path('cpd_map_show', {'id': map.id}) }}" class="btn btn-primary btn-circle">
                                        <i class="fas fa-search-plus"></i>
                                    </a>
                                    <a href="{{ path('cpd_map_edit', {'id': map.id}) }}" class="btn btn-secondary btn-circle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('map/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No se encontraron registros.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('cpd_map_new') }}" class="btn btn-primary">Nuevo mapa</a>
{% endblock %}
