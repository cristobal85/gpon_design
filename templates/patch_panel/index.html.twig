{% extends 'dashboard/index.html.twig' %}

{% block title %}Patch panel{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Patch panel</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Rack</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for patch_panel in patch_panels %}
                            <tr>
                                <td>{{ patch_panel.name }}</td>
                                <td>{{ patch_panel.rack }}</td>
                                <td>
                                    <a href="{{ path('patch_panel_show', {'id': patch_panel.id}) }}" class="btn btn-primary btn-circle">
                                        <i class="fas fa-search-plus"></i>
                                    </a>
                                    <a href="{{ path('patch_panel_edit', {'id': patch_panel.id}) }}" class="btn btn-secondary btn-circle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('patch_panel/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">No se encontraron registros</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('patch_panel_new') }}" class="btn btn-primary">Nuevo Patch panel</a>
{% endblock %}
