{% extends 'dashboard/index.html.twig' %}

{% block title %}Señal{% endblock %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Señal</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tv (1550)</th>
                            <th>Bajada (1490)</th>
                            <th>Subida (1310)</th>
                            <th>Día</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for distribution_box_signal in distribution_box_signals %}
                            <tr>
                                <td>{{ distribution_box_signal.tv }}</td>
                                <td>{{ distribution_box_signal.down }}</td>
                                <td>{{ distribution_box_signal.up }}</td>
                                <td>{{ distribution_box_signal.day ? distribution_box_signal.day|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('distribution_box_signal_show', {'id': distribution_box_signal.id}) }}" class="btn btn-primary btn-circle">
                                        <i class="fas fa-search-plus"></i>
                                    </a>
                                    <a href="{{ path('distribution_box_signal_edit', {'id': distribution_box_signal.id}) }}" class="btn btn-secondary btn-circle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('distribution_box_signal/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No se encontraron registros</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('distribution_box_signal_new') }}" class="btn btn-primary">Nueva señal</a>
{% endblock %}
